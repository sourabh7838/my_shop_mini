{
  "name": "@shopify/shop-minis-cli",
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org/"
  },
  "version": "0.0.0-snapshot.20250620160608",
  "description": "Shop Minis CLI",
  "main": "build/index.js",
  "bin": {
    "shop-minis": "build/index.js"
  },
  "author": "shopify",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "yarn clean && yarn build:cli:graphql && yarn build:cli && yarn dev-panel:build-and-copy",
    "clean": "rm -rf build",
    "build:cli": "tsc -p tsconfig.build.json && chmod 755 build/index.js && cpx \"src/schemas/*.json\" build/schemas && yarn build:cli:examples",
    "build:cli:watch": "chokidar \"./src/**/*.ts\" -c \"yarn run build:cli\" --silent --initial --ignore '(build|node_modules)'",
    "build:cli:examples": "cpx \"src/commands/create-mini/web/examples/**/{*,.*}\" build/commands/create-mini/web/examples",
    "build:cli:graphql": "node --loader ts-node/esm scripts/graphql-codegen.ts",
    "lint": "eslint . --ext .js,.mjs,.ts,.tsx --format codeframe --cache",
    "shop-minis": "./build/index.js",
    "test": "vitest",
    "test:create-mini:legacy": "node --loader ts-node/esm scripts/test-create-mini-legacy.ts",
    "test:create-mini:standalone": "node --loader ts-node/esm scripts/test-create-mini-standalone.ts",
    "dev-panel:install": "cd ./dev-panel && yarn",
    "dev-panel:start": "cd ./dev-panel && yarn start",
    "dev-panel:clean": "cd ./dev-panel && rm -rf build",
    "dev-panel:build": "cd ./dev-panel &&  PUBLIC_URL=/dev-panel yarn build",
    "dev-panel:build-and-copy": "mkdir -p build/dev-panel/ && yarn dev-panel:clean && yarn dev-panel:install && yarn dev-panel:build && cp -r dev-panel/build/* build/dev-panel"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/client-preset": "^2.1.1",
    "@react-native-community/eslint-config": "^3.1.0",
    "@shopify/eslint-plugin": "^42.0.1",
    "@types/connect": "^3.4.35",
    "@types/envinfo": "^7.8.1",
    "@types/finalhandler": "^1.2.3",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.17",
    "@types/prompts": "^2.4.2",
    "@types/qrcode": "^1.5.0",
    "@types/serve-static": "^1.15.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "chokidar-cli": "^3.0.0",
    "cpx": "^1.5.0",
    "eslint": "^8.24.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-reanimated": "^2.0.0",
    "prettier": "^2.7.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vitest": "^0.29.8"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.10.0",
    "@ngrok/ngrok": "1.4.1",
    "@shopify/cli-kit": "3.70.0",
    "@types/diff": "^7.0.1",
    "@types/jscodeshift": "^0.11.11",
    "@vitejs/plugin-react": "^4.2.1",
    "archiver": "^5.3.1",
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "connect": "^3.7.0",
    "diff": "^7.0.0",
    "dotenv": "^16.0.3",
    "envinfo": "^7.8.1",
    "escape-string-regexp": "^4.0.0",
    "external-editor": "^3.1.0",
    "finalhandler": "^2.1.0",
    "fs-extra": "^11.1.0",
    "glob": "^9.3.2",
    "google-auth-library": "9.8.0",
    "graphql": "15.8.0",
    "graphql-config": "^4.3.5",
    "graphql-request": "^5.2.0",
    "graphql-typescript-definitions": "3.3.6",
    "image-size": "^2.0.1",
    "inquirer": "^8.2.3",
    "internal-ip": "^6.2.0",
    "jscodeshift": "^0.15.1",
    "json5": "^2.2.3",
    "jsonschema": "^1.4.1",
    "lodash": "^4.17.21",
    "metro": "0.80.12",
    "metro-config": "0.80.12",
    "metro-core": "0.80.4",
    "open": "^8.4.0",
    "ora": "^5.4.1",
    "patch-package": "6.5.1",
    "prompts": "^2.4.2",
    "replace-in-file": "^6.3.5",
    "semver": "^7.3.8",
    "serve-static": "^1.15.0",
    "simple-git": "^3.27.0",
    "suppress-experimental-warnings": "^1.1.17",
    "vite": "^5.0.8"
  },
  "resolutions": {
    "@apollo/federation": "0.38.1"
  }
}
