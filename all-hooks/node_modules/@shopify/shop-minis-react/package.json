{
  "name": "@shopify/shop-minis-react",
  "license": "SEE LICENSE IN LICENSE.txt",
  "version": "0.0.13",
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org/"
  },
  "description": "React component library for Shopify Shop Minis with Tailwind CSS v4 support (source-only, requires TypeScript)",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "src/**/*.{ts,tsx,css}",
    "dist/**/*",
    "tailwind.config.js",
    "README.md",
    "LICENSE.txt"
  ],
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./styles": "./src/index.css",
    "./tailwind": "./tailwind.config.js",
    "./tailwind.config": "./tailwind.config.js",
    "./src/*": "./src/*"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0",
    "tailwindcss": ">=4.0.0",
    "typescript": ">=5.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "4.1.8",
    "@types/url-parse": "1.4.9",
    "@vitejs/plugin-react": "4.5.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "embla-carousel-react": "8.6.0",
    "lucide-react": "0.513.0",
    "motion": "12.17.3",
    "next-themes": "0.4.6",
    "radix-ui": "1.4.2",
    "react-resizable-panels": "3.0.2",
    "sonner": "2.0.5",
    "tailwind-merge": "2.6.0",
    "tailwindcss": "4.1.8",
    "tw-animate-css": "1.3.4",
    "url-parse": "1.5.10",
    "vaul": "1.1.2",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@shopify/generate-docs": "^0.16.6",
    "@types/node": "^20.12.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-plugin-dts": "^4.3.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwind",
    "shopify",
    "shop-minis",
    "typescript",
    "source",
    "css-variables",
    "tailwindcss-v4"
  ],
  "author": "Shopify",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shopify/shop-client.git",
    "directory": "packages/shop-minis-react"
  },
  "scripts": {
    "dev": "vite ./demo",
    "build": "vite build --mode lib",
    "build:watch": "vite build --mode lib --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  }
}